<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginScreenController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#005883" height="400.0" stroke="BLACK" strokeType="INSIDE" width="600.0" />
      <PasswordField fx:id="passwordTxt" layoutX="226.0" layoutY="248.0" prefHeight="26.0" prefWidth="170.0" promptText="Enter Password" />
      <Label fx:id="passwordLabel" layoutX="84.0" layoutY="251.0" text="Password:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <effect>
            <ColorAdjust />
         </effect>
      </Label>
      <TextField fx:id="userNameTxt" layoutX="227.0" layoutY="200.0" prefHeight="26.0" prefWidth="169.0" promptText="Enter Username" />
      <Label fx:id="userNameLabel" layoutX="84.0" layoutY="203.0" prefHeight="20.0" prefWidth="136.0" text="Username:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <effect>
            <ColorAdjust />
         </effect>
      </Label>
      <Label fx:id="appTitleLabel" layoutX="88.0" layoutY="47.0" prefHeight="46.0" prefWidth="460.0" text="Appointment Scheduler+ Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Label>
      <Button fx:id="resetButton" layoutX="408.0" layoutY="200.0" mnemonicParsing="false" onAction="#resetFields" prefHeight="26.0" prefWidth="100.0" text="Reset" />
      <Button fx:id="loginButton" layoutX="408.0" layoutY="248.0" mnemonicParsing="false" onAction="#onActionLogin" prefHeight="26.0" prefWidth="100.0" text="Login" />
      <Button fx:id="exitButton" layoutX="485.0" layoutY="357.0" mnemonicParsing="false" onAction="#exitApplication" prefHeight="26.0" prefWidth="100.0" text="Exit" />
      <Label fx:id="timeZoneID" layoutX="300.0" layoutY="100.0" text="timeZoneID" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <BorderPane prefHeight="200.0" prefWidth="200.0" />
      <Label fx:id="localTimeZoneLabel" layoutX="117.0" layoutY="100.0" text="Local Timezone:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
